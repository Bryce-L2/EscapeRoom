#include <iostream>
#include <ctime>

using namespace std;

void Intro();
void characterChoice();
void time();
bool escapeRoom();

int main() {
    Intro();
    characterChoice();

    if (escapeRoom()) {
        cout << "Congratulations! You have successfully escaped the Fortnite-themed escape room!" << endl;
    } else {
        cout << "You failed to escape. Better luck next time!" << endl;
    }

    return 0;
}

void Intro() {
    cout << "Welcome to the Fortnite Escape Room!" << endl;
    cout << "\nYou just got full boxed by a sweaty John Wick and you need to escape!" << endl;
    
}

void characterChoice() {
    string choice;
    cout << "\nWhat character are you playing as? " << endl;
    cin >> choice;
    cout << "\nYou are playing as " << choice;
    
}



void time() {
    time_t start_time = time(0);
    time_t current_time;

    cout << "You have 5 minutes to escape the box and defeat john wick"<< endl;

    bool timer_done = false;

    while (!timer_done) {
        current_time = time(0);  
        
        if (difftime(current_time, start_time) >= 310) {
            cout << "John wick hit you with a mongraal classic and u get cooked";
            timer_done = true;  
        }
    }

}

bool escapeRoom() {
    cout << "\nSolve the fortnite puzzles to escape." << endl;

    time();

    return true;
}

